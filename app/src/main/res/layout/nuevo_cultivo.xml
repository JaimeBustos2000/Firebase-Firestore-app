<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_tenue"
    tools:context=".Nuevo_cultivo">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/green_menus"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/arrow"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:backgroundTint="@color/green_menus"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/verduritas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Verduritas SA"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/desconectar_nuevo_cultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/green_menus"
            app:srcCompat="@drawable/baseline_logout_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alias"
            android:textSize="25sp"
            android:layout_marginBottom="15dp"
            />


        <EditText
            android:id="@+id/alias"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/edit_text_rounded"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="25sp"
            android:layout_marginBottom="15dp"
            />

        <EditText
            android:id="@+id/Date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="date"
            android:background="@drawable/edit_text_rounded"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Tipo de cultivo"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/spinner_cultivo"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/edit_text_rounded"
            android:layout_marginBottom="15dp"
            android:entries="@array/tipocultivo" />

        <Button
            android:id="@+id/add_cultivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/verdeclaro"
            android:background="@drawable/edit_text_rounded"
            android:text="AÃ±adir cultivo" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>